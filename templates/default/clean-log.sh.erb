<% unless node["os"] == "linux" %>
#!/usr/bin/sh
<% else %>
#!/bin/sh
<% end %>
<% unless @config_rm.empty? %>
# rm files
# --------
<%  @config_rm.each do |rm| %>
rm <%= rm %>
<% end %>
<% end %>

#----------
<% unless @config_archive.empty? %>
# archive files
<% @config_archive.each do |archive| %>
gzip <%= archive %>
<% end %>
<% end %>

#----------
<% unless @config_cat.empty? %>
#cat files
<% @config_cat.each do |cat| %>
cat /dev/null > <%= cat %>
<% end %>
<% end %>